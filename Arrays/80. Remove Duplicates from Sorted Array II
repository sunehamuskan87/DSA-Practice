    //optimal
    public int removeDuplicates(int[] nums) {
        int n = nums.length;
        int j = 2;
        int idx = 2;
        for(int i=2;i<n;i++){
            if(nums[i] != nums[j-2]){
                nums[idx++] = nums[i];
                j++;
            }
        }
        return idx;
    }
}
