    //Optimal
    public void rotate(int[] nums, int k) {
        int n = nums.length;
        k = k%n;

        swappingEle(nums, 0, n-k-1);
        swappingEle(nums, n-k, n-1);
        swappingEle(nums, 0, n-1);
    }

    public int[] swappingEle(int[] nums, int l, int r) {
        while(l<r){
            int temp = nums[l];
            nums[l] = nums[r];
            nums[r] = temp;
            l++;
            r--;
        }
        return nums;
    }
}
