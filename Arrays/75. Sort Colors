    //Dutch NATIONAL FLAG ALGO --- OPTIMAL
    public void sortColors(int[] nums) {
        int n = nums.length;
        int low = 0, mid = 0, high = n-1;
        while(mid <= high){
            //swap low and mid and increament both
            if(nums[mid] == 0){
                int temp = nums[mid];
                nums[mid] = nums[low];
                nums[low] = temp;
                mid++;
                low++;
            }
            //already sorted
            else if(nums[mid] == 1){
                mid++;
            }
            //swap mid with high and decreament high
            else{
                int temp = nums[mid];
                nums[mid] = nums[high];
                nums[high] = temp;
                high--;
            }
        } 
    }
}
