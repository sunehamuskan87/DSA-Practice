class Solution {
    //Brute
    // public int numSubarrayProductLessThanK(int[] nums, int k) {
    //     int count = 0;
    //     for(int i=0;i<nums.length;i++){
    //         int product = 1;
    //         for(int j=i;j<nums.length;j++){
    //             product *= nums[j];
    //             if(product < k){
    //                 count++;
    //             } 
    //             else{
    //                 break;
    //             }
    //         }
    //     }
    //     return count;
    // }

    //opt
    public int numSubarrayProductLessThanK(int[] nums, int k) {
        if(k<=1) return 0;
        int count = 0, l = 0, r = 0;
        int product = 1;

        while(r<nums.length){
            product *= nums[r];
            while(product >= k){
                product /= nums[l];
                l++;
            }
            count += r-l+1;
            r++;
        }
        return count;
    }
}
