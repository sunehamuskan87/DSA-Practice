class Solution {
    // brute
    // public int numberOfSubstrings(String s) {
    //     int count = 0;
    //     for(int i=0;i<s.length();i++){
    //         int[] freq = new int[3];
    //         for(int j=i;j<s.length();j++){
    //             freq[s.charAt(j) - 'a']++;
    //             if(freq[0]>0 && freq[1]>0 && freq[2]>0) count++;
    //         }
    //     }
    //     return count;
    // }

    //opt
    public int numberOfSubstrings(String s) {
        int[] freq = new int[3];
        int total=0;
        Arrays.fill(freq,-1);
        for(int i=0;i<s.length();i++){
            freq[s.charAt(i)-'a'] = i;
            if(freq[0]!=-1 && freq[1]!=-1 && freq[2]!=-1){
                int smallestIdx = Math.min(freq[0], Math.min(freq[1], freq[2]));
                total += 1 + smallestIdx;
            }
        }
        return total;
    }
}
