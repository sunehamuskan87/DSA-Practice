class Solution {
    //brute
    // public int minSubArrayLen(int target, int[] nums) {
    //     int n = nums.length;
    //     int length = 0, minLen = Integer.MAX_VALUE;
        
    //     for(int i=0;i<n;i++){
    //         int sum = 0;
    //         for(int j=i;j<n;j++){
    //             sum+= nums[j];
    //             if(sum >= target){
    //                 minLen = Math.min(minLen, j-i+1);
    //             }
    //         }
    //     }
    //     return (minLen < Integer.MAX_VALUE)? minLen : 0;
    // }

    //opt
    public int minSubArrayLen(int target, int[] nums) {
        int n = nums.length;
        int l = 0, r = 0, sum = 0, minLen = Integer.MAX_VALUE;
        while(r<n){
            sum += nums[r];
            if(sum >= target){
                while(sum >= target){
                    minLen = Math.min(minLen, r-l+1);
                    sum -= nums[l];
                    l++;
                }
            }
            r++;
        }
        return (minLen < Integer.MAX_VALUE)? minLen : 0;
    }
}
