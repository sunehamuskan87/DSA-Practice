//brute
class Solution {
    public int longestOnes(int[] nums, int k) {
        int maxOnes = Integer.MIN_VALUE;

        for(int i=0;i<nums.length;i++){
            int count = 0;
            for(int j=i;j<nums.length;j++){
                if(nums[j] == 0){
                    count++;
                }
                if(count <= k){
                    maxOnes = Math.max(maxOnes, j-i+1);
                }
                else if(count > k){
                    break;
                }
            }
            if(count < k) break;
        }
        return (maxOnes == Integer.MIN_VALUE) ? 0 : maxOnes;
    }
}

//opt
class Solution {
    public int longestOnes(int[] nums, int k) {
        int l = 0, r = 0, count = 0;
        int maxOnes = 0;

        while(r<nums.length){
            if(nums[r] == 0){
                count++;
            }
            while/if(count > k){    ---> while or if both works here but while takes up O(n) in worst case so better to use if
                if(nums[l] == 0){
                    count--;
                }
                l++;
            }
            maxOnes = Math.max(maxOnes, r-l+1);
            r++;
        }
        return maxOnes;
    }
}
