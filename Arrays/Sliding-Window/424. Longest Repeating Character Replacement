    //     return maxLen;
    // }

    //OPT
    public int characterReplacement(String s, int k) {
        int[] arr = new int[26];
        int l=0, r=0, maxLen=0, maxFreq = 0;
        while(r<s.length()){
            arr[s.charAt(r) - 'A']++;
            maxFreq = Math.max(maxFreq, arr[s.charAt(r)-'A']);
            int flip = (r-l+1) - maxFreq;
            if(flip > k){
                arr[s.charAt(l) - 'A']--;
                l++;
            }
            maxLen = Math.max(maxLen, r-l+1);
            r++;
        }
        return maxLen;
    }
}
