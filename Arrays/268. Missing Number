    //opt-2 --> nums = [3,0,1]
    public int missingNumber(int[] nums) {
        int xor1 = 0, xor2 = 0;
        int n = nums.length;
        for(int i=0;i<n;i++){
            xor1 = xor1 ^ nums[i];  // 3 ^ 0 ^ 1
            xor2 = xor2 ^ i;        // 0 ^ 1 ^ 2
        }
        xor2 = xor2 ^ n;            // 0 ^ 1 ^ 2 ^ 3 ->adding nth number
        return xor1 ^ xor2;         // after xoring return remaing num
    }
}
