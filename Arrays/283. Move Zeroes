    public void moveZeroes(int[] nums) {
        if(nums.length == 1) return;
        int j = -1;
        for(int i=0;i<nums.length;i++){
            if(nums[i] == 0 && j == -1){
                j=i;
            }
            else if(nums[i] != 0 && j != -1){
                int temp = nums[i];
                nums[i] = nums[j];
                nums[j] = temp;
                j++;
            }
        }
    }
}
