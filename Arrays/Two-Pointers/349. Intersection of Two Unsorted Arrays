    public int[] intersection(int[] nums1, int[] nums2) {
        HashSet<Integer> sset = new HashSet<>();
        HashSet<Integer> res = new HashSet<>();
        for(int ele : nums1){
            sset.add(ele);
        }

        for(int i=0;i<nums2.length;i++){
            if(sset.contains(nums2[i])){
                res.add(nums2[i]);
            }
        }
        int idx = 0;
        int[] arr = new int[res.size()];
        for(int it : res){
            arr[idx++] = it;
        }
        return arr;
    }
}
